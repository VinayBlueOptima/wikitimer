{
    "name": "Wikipedia Timer",
    "description": "Avoid falling down the wikipedia rabbit hole!",
    "version" : "1.1",
    "manifest_version": 2,
    "permissions": ["storage",
                    "tabs",
                    "alarms"],
    "background": {
        "persistent": true,
        "scripts": ["gatekeeper.js"]
    },

    "browser_action": {
        "default_title": "Awesome Sauce",
        "default_icon": {
            "16": "images/icon16.png",
            "24": "images/icon24.png",
            "32": "images/icon32.png"
        },
        "default_popup": "popup.html"
    }
}
